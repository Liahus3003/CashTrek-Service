{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
